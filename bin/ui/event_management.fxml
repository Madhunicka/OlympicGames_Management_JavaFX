<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" >
    <TableView fx:id="eventTable" prefWidth="600" prefHeight="400">
        <!-- Table columns for event details -->
        <columns>
            <TableColumn text="Sport" fx:id="sportColumn" />
            <TableColumn text="Venue" fx:id="venueColumn" />
            <TableColumn text="Date" fx:id="dateColumn" />
        </columns>
    </TableView>
    <Button text="Create Event" onAction="#handleAddEvent"/>
    <Button text="Edit Event" onAction="#handleEditEvent"/>
    <Button text="Delete Event" onAction="#handleDeleteEvent"/>
    <!-- If you have an assignAthlete method, add the button with the corresponding action -->
    <Button text="Assign Athlete" onAction="#assignAthlete"/>
</AnchorPane>
